    "@tailwindcss/vite": "^4.1.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
